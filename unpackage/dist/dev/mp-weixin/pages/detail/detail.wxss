
.rating {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.rating image {
	width: 30rpx;
	height: 30rpx;
}
.rating text {
	margin-left: 10rpx;
	font-weight: 700;
	color: orange;
}

#detail {
	color: #FFFFFF;
	background: -webkit-linear-gradient(top left, #e66465, #9198e5);
	background: linear-gradient(to bottom right, #e66465, #9198e5);
	height: 100%;
	background-size:100% 100%;
}
.movie-info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding-top: 50rpx;
}
.info-lef {
	margin-left: 50rpx;
}
.info-lef image {
	width: 200rpx;
	height: 270rpx;
	border-radius: 15rpx;
	box-shadow: 10rpx 10rpx 30rpx #000;
}
.info-right {
	margin-left: 60rpx;
}
.info-right .movie-name {
	font-size: 22px;
	white-space: wrap;
	margin-bottom: 25rpx;
}
.type, .language, .language {
	margin-bottom: 25rpx;
}
.rating {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 90%;
	margin: 50rpx auto;
	background-color: rgb(111,66,39);
	border-radius: 20rpx;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.rating .rating-text {
	padding-top: 30rpx;
	font-size: 20px;
}
.rating .rating-num {
	margin-left: -200rpx;
}
.rating .rating-num view {
	color: orange;
	font-size: 20px;
	font-weight: 700;
	margin-top: 30rpx;
}
.brief {
	width: 90%;
	margin: 80rpx auto;
}
.brief .brief-title {
	font-size: 20px;
	font-weight: 700;
	margin-bottom: 30rpx;
}
.trailer {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.trailer video {
	width: 92%;
	-webkit-align-self: center;
	        align-self: center;
	border-radius: 20rpx;
}
.trailer .trailer-title {
	font-size: 20px;
	font-weight: 700;
	margin-left: 35rpx;
	margin-bottom: 30rpx;
}
.related-pic-title {
	font-size: 20px;
	font-weight: 700;
	margin-left: 35rpx;
	margin-bottom: 30rpx;
}
.related-pic {
	margin-top: 100rpx;
}
.scroll-wrapper {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding-bottom: 50rpx;
}
.scroll-item {
	margin: auto 5rpx;
}
.scroll-item image {
	width: 300rpx;
	height: 250rpx;
	border-radius: 15rpx;
}

