
.rating {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.rating image {
	width: 30rpx;
	height: 30rpx;
}
.rating text {
	margin-left: 10rpx;
	font-weight: 700;
	color: orange;
}

.search-wrapper {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	z-index: 999;
	height: 170rpx;
	background: -webkit-gradient(linear, left top, right bottom, from(rgba(0, 112, 255, 1)), to(#9198e5));
	background: -webkit-linear-gradient(top left, rgba(0, 112, 255, 1), #9198e5);
	background: linear-gradient(to bottom right, rgba(0, 112, 255, 1), #9198e5);
}
.search-wrapper image {
	position: absolute;
	top: 60rpx;
	left: 100rpx;
	width: 50rpx;
	height: 50rpx;
	z-index: 9
}
.search-wrapper input {
	position: absolute;
	top: 50rpx;
	left: 50%;
	margin-left: -300rpx;
	width: 500rpx;
	height: 70rpx;
	border-radius: 20rpx;
	background-color: #efefef;
	padding-left: 100rpx;
}
.rcd-movie {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	margin-top: 220rpx;
	height: 900rpx;
}
.rcd-item {
	width: 33.3%;
	margin-bottom: 40rpx;
}
.rcd-item navigator {
	padding-left: 28rpx;
}
.rcd-item image {
	width: 200rpx;
	height: 270rpx;
	border-radius: 15rpx;
}
.rcd-item .movie-name {
	width: 200rpx;
	/* 对名字过长进行处理 */
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.result-list {
	margin-top: 170rpx;
}
.result-item navigator {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	border-bottom: 1px solid #ccc;
}
.result-item image {
	width: 140rpx;
	height: 180rpx;
	border-radius: 20rpx;
	/* padding: 20upx; */
	margin: 20rpx;
}
.result-item .result-info {
	-webkit-box-flex: 5;
	-webkit-flex: 5;
	        flex: 5;
	margin-top: 20rpx;
	margin-left: 30rpx;
}
.result-item .info-name {
	font-weight: 700;
	font-size: 18px;
	width: 300rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	margin-bottom: 20rpx;
}
.info-type,.info-date {
	color: #626262;
	margin-bottom: 10rpx;
}
.result-item .result-score {
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	        flex: 2;
}
.result-item .result-score {
	margin-top: 20rpx;
	font-size: 18px;
	font-weight: 700;
	color: orange;
}

