page {
	background: rgb(245,246,250);
}
.logged-button {
	background: -webkit-linear-gradient(left, rgba(229, 80, 50, 1), rgba(225, 120, 67, 1));
	background: linear-gradient(to right, rgba(229, 80, 50, 1), rgba(225, 120, 67, 1));
	position: absolute;
	width: 300rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-weight: 700;
	font-size: 20px;
	border-radius: 20rpx;
	top: 450rpx;
	left: 50%;
	margin-left: -150rpx;
	color: #FFFFFF;
}
.logged {
	position: relative;
}
.user-info {
	position: absolute;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	background-color: #FFFFFF;
	width: 650rpx;
	height: 360rpx;
	top: 115rpx;
	left:50%;
	-webkit-transform:translate(-50%);
	        transform:translate(-50%);
	border-radius: 30rpx;
}
.user-info .user-name {
	width: 300rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 22px;
	margin-left: 50rpx;
}
.user-info .avatar {
	width: 150rpx;
	height: 150rpx;
	/* border-radius: 25upx; */
	border-radius: 50%;
	margin-left: 50rpx;
}
.user-info .sex {
	width: 40rpx;
	height: 40rpx;
}
.user-signature {
	position: absolute;
	top: 390rpx;
	left: 125rpx;
	width: 500rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.settings {
	/* font-size: 16px; */
	position: absolute;
	top: 500rpx;
	width: 610rpx;
	height: 70rpx;
	line-height: 70rpx;
	background-color: #FFFFFF;
	left:50%;
	-webkit-transform:translate(-50%);
	        transform:translate(-50%);
	border-radius: 15rpx;
	padding-left: 40rpx;
}
.settings image {
	top: 12rpx;
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
.log-out {
	position: absolute;
	top: 620rpx;
	width: 610rpx;
	height: 70rpx;
	line-height: 70rpx;
	background-color: #FFFFFF;
	left:50%;
	-webkit-transform:translate(-50%);
	        transform:translate(-50%);
	border-radius: 15rpx;
	padding-left: 40rpx;
}
.log-out image {
	top: 12rpx;
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}

